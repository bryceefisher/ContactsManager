@model ContactsManager.Core.DTO.PersonResponse
@{
    ViewBag.Title = "Delete Person";
}

<div class="container mt-5 text-center">
    <div class="pt-3">
        <h2 class="display-4">Delete Contact</h2>
        <h4>Are you sure you want to delete this Contact?</h4>
    </div>
</div>

<div class="container col-md-9 col-lg-6 col-sm-12 d-flex flex-column">
    <form asp-controller="Person" asp-action="Delete" method="post">
        <div class="mb-3 d-flex mt-3 justify-content-between">
            <div class="col-3 col-sm-4  mt-1">
                <label asp-for="PersonName" class="form-label">
                    <h5>Person Name:</h5>
                </label>
            </div>
            <div class="col-9 col-sm-8">
                <input class="w-100 form-control" asp-for="PersonName" disabled>
            </div>
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success">Delete</button>
            <a class="btn btn-danger" asp-area="" asp-action="Index" asp-controller="Person">No</a>
        </div>
        @if (ViewBag.Errors != null)
        {
            <div class="d-flex justify-content-center text-danger mt-3">
                <ul>
                    @foreach (string error in ViewBag.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }
    </form>
</div>